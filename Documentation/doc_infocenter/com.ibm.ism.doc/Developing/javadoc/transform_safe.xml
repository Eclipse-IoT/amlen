<?xml version="1.0" encoding="UTF-8" ?> 
<project name="websphere.mq.doc.javadoc" xmlns:ut="antlib:com.ibm.tools.antz.ut" default="javadoc"> 
 
   <property name="plugin.name" value="com.ibm.mq.javadoc.doc" />
   
   <target name="javadoc"> 
      <!--  Make sure the output dir exists --> 
      <mkdir dir="${build.dir}/${plugin.name}" /> 
      
      <!-- Make sure the TOCs are regenerated by deleting them -->
      <delete dir="${build.dir}/${plugin.name}" includes="java.xml jms.xml" />
      
      <!-- Copy javadoc files -->
      <copy todir="${build.dir}/${plugin.name}" preservelastmodified="yes" overwrite="yes">
         <fileset dir="${javadoc.source.dir}" includes="**" />
      </copy>
      
      <!-- Copy local javadoc files -->
      <copy todir="${build.dir}/${plugin.name}" preservelastmodified="yes">
         <fileset dir="." includes="*.xml" excludes="transform.xml" />
      </copy>
 
      <!-- Create some javadoc TOCs --> 
      <ut:jdoc2xmltoc> 
         <fileset dir="${build.dir}/${plugin.name}" includes="WMQJavaClasses/**/allclasses-frame.html" /> 
         <mapper type="merge" to="java.xml" /> 
      </ut:jdoc2xmltoc> 
      <ut:jdoc2xmltoc> 
         <fileset dir="${build.dir}/${plugin.name}" includes="WMQJMSClasses/**/allclasses-frame.html" /> 
         <mapper type="merge" to="jms.xml" /> 
      </ut:jdoc2xmltoc>
