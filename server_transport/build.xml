<project name="server_transport" default="buildall" basedir=".">
	<target name="buildall">
	        <antcall target="build-srv-transport"/>
	</target>
    <target name="build-srv-transport">
        <exec dir="${basedir}"
        	executable="${build.dir}/build.sh"
        	resultproperty="retcode"
        	resolveexecutable="true"
        	failonerror="false">
            <env key="BUILD_LABEL" value="${buildLabel}" />
            <env key="ISM_VERSION" value="${ISM_VERSION_ID}" />
        </exec>
    	<condition property="errcode">
    	    <not>
    	        <equals arg1="${retcode}" arg2="0"/>
    	    </not>
    	</condition>
    	<antcall target="log_returncode"/>
    </target>

	 <target name="cunit-srv-transport">
	        <exec dir="${basedir}"
	                executable="${build.dir}/build.sh"
	                resultproperty="retcode"
	                resolveexecutable="true"
	                failonerror="true">
	            <arg value="cunit"/>
	        	<env key="BLD_TYPE" value="${buildType}" />
	        </exec>
	        <condition property="errcode">
	            <not>
	                <equals arg1="${retcode}" arg2="0"/>
	            </not>
	        </condition>
	        <antcall target="log_returncode"/>
	    </target>

    <target name="log_returncode" if="errcode">
        <echo>==== server_transport build failed ====</echo>
        <echo file="${workspace}/build_log/server_transport.errorcode"
              message="server_transport build failed with exit code ${retcode} from C compiler"/>
    </target>
</project>
