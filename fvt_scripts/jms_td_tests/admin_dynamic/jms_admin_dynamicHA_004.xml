  TestCase Name: jms_admin_dynamicHA_004

  Test Category:  JMS Dynamic Policy Updates


  Test Description:
    HA pending delete and use count test.
    Create 5 durable subscriptions that uses policy PendingDeleteMP1.
    Verify use count is correct.
    Delete 2 subscriptions.
    Verify use count is correct.
    Delete the messaging policy.
    Check sub and usecount and pending delete.
    Create another subscription (fails as policy is in pending delete state).
    Failover to the standby server.
    Check sub and usecount and pending delete.
    Unsubscribe remaining subscriptions.
    Verify messaging policy is deleted.

-->

<ImaJmsTest name="jms_admin_dynamicHA_004.xml">

    <Action name="cons1" type="CompositeAction">

        <Action name="Create_cf1" type="CreateConnectionFactory">
            <ActionParameter name="structure_id">cf1</ActionParameter>
            <!--ActionParameter name="loglevel">9</ActionParameter>
            <ActionParameter name="logfile">stdout</ActionParameter-->
        </Action>

        <Action name="SetProps_cf1" type="FillIsmProps">
            <ActionParameter name="structure_id">cf1</ActionParameter>
            <ActionParameter name="validateAll">true</ActionParameter>
            <ActionParameter name="validateNoWarn">false</ActionParameter>
            <ImaProperty name="ClientID" value="HADynamicJMSClient" type="STRING"/>
            <include>../common/JMS_serverHA.xml</include>
            <ImaProperty name="Port" value="20040"/>
        </Action>

        <!-- Successfully connect with a ClientID as HADynamicJMSClient using ConnectionFactory 1. (cf1) -->
        <Action name="CreateConnection_cf1" type="CreateConnection">
            <ActionParameter name="structure_id">connection_cf1</ActionParameter>
            <ActionParameter name="factory_id">cf1</ActionParameter>
        </Action>

        <!-- Create a session -->
        <Action name="CreateSession1_conn_cf1" type="CreateSession">
            <ActionParameter name="conn_id">connection_cf1</ActionParameter>
            <ActionParameter name="structure_id">session1_cf1</ActionParameter>
        </Action>

        <!-- Create a Destination to use to create a  subscription  -->
        <Action name="CreateDestination_cons1" type="CreateDestination">
            <ApiParameter name="name">/HADynamicJMSTopic</ApiParameter>
            <ActionParameter name="type">topic</ActionParameter>
            <ActionParameter name="structure_id">HADynamicTopic</ActionParameter>
        </Action>

        <Action name="CreateConsumer_1" type="CreateDurableConsumer">
            <ActionParameter name="structure_id">consumer1</ActionParameter>
            <ActionParameter name="dest_id">HADynamicTopic</ActionParameter>
            <ActionParameter name="session_id">session1_cf1</ActionParameter>
            <ApiParameter name="durableName">DurableHADynamicSubscription</ApiParameter>
        </Action>

        <!-- Before failover we should see our subscription, using messaging policy
         PendingDeleteMP1 -->
        <Action name="ShowSubMPIsCorrect" type="RestAPI">
			<ActionParameter name="server">``A1_HOST``:``A1_PORT``</ActionParameter>
			<ActionParameter name="path">/ima/v1/monitor/Subscription?ClientID=HADynamicJMSClient</ActionParameter>
			<ActionParameter name="action">GET</ActionParameter>
			<ActionParameter name="payload"></ActionParameter>
			<ActionParameter name="printResult">true</ActionParameter>
			<ActionParameter name="expectedStatusCode">200</ActionParameter>
			<ActionParameter name="expectedMessageCode"></ActionParameter>
		</Action>

        <Action name="CreateConsumer_2" type="CreateDurableConsumer">
            <ActionParameter name="structure_id">consumer2</ActionParameter>
            <ActionParameter name="dest_id">HADynamicTopic</ActionParameter>
            <ActionParameter name="session_id">session1_cf1</ActionParameter>
            <ApiParameter name="durableName">DurableHADynamicSubscriptionB</ApiParameter>
        </Action>

        <Action name="CreateConsumer_3" type="CreateDurableConsumer">
            <ActionParameter name="structure_id">consumer3</ActionParameter>
            <ActionParameter name="dest_id">HADynamicTopic</ActionParameter>
            <ActionParameter name="session_id">session1_cf1</ActionParameter>
            <ApiParameter name="durableName">DurableHADynamicSubscriptionC</ApiParameter>
        </Action>

        <Action name="CreateConsumer_4" type="CreateDurableConsumer">
            <ActionParameter name="structure_id">consumer4</ActionParameter>
            <ActionParameter name="dest_id">HADynamicTopic</ActionParameter>
            <ActionParameter name="session_id">session1_cf1</ActionParameter>
            <ApiParameter name="durableName">DurableHADynamicSubscriptionD</ApiParameter>
        </Action>

        <Action name="CreateConsumerFred_5" type="CreateDurableConsumer">
            <ActionParameter name="structure_id">consumer5_Fred</ActionParameter>
            <ActionParameter name="dest_id">HADynamicTopic</ActionParameter>
            <ActionParameter name="session_id">session1_cf1</ActionParameter>
            <ApiParameter name="durableName">DurableHADynamicSubscriptionE</ApiParameter>
        </Action>

        <!-- Before failover, we should also see use count of 1 on the MP -->
        <Action name="UseCountAfterCreateSubs" type="RestAPI">
			<ActionParameter name="server">``A1_HOST``:``A1_PORT``</ActionParameter>
			<ActionParameter name="path">/ima/v1/configuration/TopicPolicy/PendingDeleteMP1</ActionParameter>
			<ActionParameter name="action">GET</ActionParameter>
			<ActionParameter name="payload"></ActionParameter>
			<ActionParameter name="printResult">true</ActionParameter>
			<ActionParameter name="expectedStatusCode">200</ActionParameter>
			<ActionParameter name="expectedMessageCode"></ActionParameter>
		</Action>

        <Action name="CloseConsumerB" type="CloseConsumer">
            <ActionParameter name="consumer_id">consumer2_Fred</ActionParameter>
        </Action>

        <Action name="CloseConsumerC" type="CloseConsumer">
            <ActionParameter name="consumer_id">consumer3_Fred</ActionParameter>
        </Action>

        <Action name="UnsubscribeC" type="Unsubscribe">
            <ApiParameter name="durableName">DurableHADynamicSubscriptionC</ApiParameter>
            <ActionParameter name="session_id">session1_cf1</ActionParameter>
        </Action>

        <Action name="UnsubscribeB" type="Unsubscribe">
            <ApiParameter name="durableName">DurableHADynamicSubscriptionB</ApiParameter>
            <ActionParameter name="session_id">session1_cf1</ActionParameter>
        </Action>

        <!-- Before failover, we should also see use count of 1 on the MP -->
        <Action name="UseCountBeforeUnsubscribes" type="RestAPI">
			<ActionParameter name="server">``A1_HOST``:``A1_PORT``</ActionParameter>
			<ActionParameter name="path">/ima/v1/configuration/TopicPolicy/PendingDeleteMP1</ActionParameter>
			<ActionParameter name="action">GET</ActionParameter>
			<ActionParameter name="payload"></ActionParameter>
			<ActionParameter name="printResult">true</ActionParameter>
			<ActionParameter name="expectedStatusCode">200</ActionParameter>
			<ActionParameter name="expectedMessageCode"></ActionParameter>
		</Action>

        <!-- Remove MP from endpoint -->
        <Action name="RemoveMPFromEP" type="RestAPI">
			<ActionParameter name="server">``A1_HOST``:``A1_PORT``</ActionParameter>
			<ActionParameter name="path">/ima/v1/configuration</ActionParameter>
			<ActionParameter name="action">POST</ActionParameter>
			<ActionParameter name="payload">{"Endpoint":{"PendingDeleteEP1":{"TopicPolicies":"PendingDeleteMP2"}}}</ActionParameter>
			<ActionParameter name="printResult">true</ActionParameter>
			<ActionParameter name="expectedStatusCode">200</ActionParameter>
			<ActionParameter name="expectedMessageCode"></ActionParameter>
		</Action>

        <!-- Delete MP before failover -->
        <Action name="DeleteMP" type="RestAPI">
			<ActionParameter name="server">``A1_HOST``:``A1_PORT``</ActionParameter>
			<ActionParameter name="path">/ima/v1/configuration/TopicPolicy/PendingDeleteMP1</ActionParameter>
			<ActionParameter name="action">DELETE</ActionParameter>
			<ActionParameter name="payload"></ActionParameter>
			<ActionParameter name="printResult">true</ActionParameter>
			<ActionParameter name="expectedStatusCode">200</ActionParameter>
			<ActionParameter name="expectedMessageCode"></ActionParameter>
		</Action>

        <Action name="CreateConsumer_6" type="CreateDurableConsumer" rc="1" reason="CWLNC0207">
            <ActionParameter name="structure_id">consumer6</ActionParameter>
            <ActionParameter name="dest_id">HADynamicTopic</ActionParameter>
            <ActionParameter name="session_id">session1_cf1</ActionParameter>
            <ApiParameter name="durableName">DurableHADynamicSubscriptionF</ApiParameter>
        </Action>

        <!-- Before failover, we should also see use count of 1 on the MP -->
        <Action name="UseCountBeforeFailover" type="RestAPI">
			<ActionParameter name="server">``A1_HOST``:``A1_PORT``</ActionParameter>
			<ActionParameter name="path">/ima/v1/configuration/TopicPolicy/PendingDeleteMP1</ActionParameter>
			<ActionParameter name="action">GET</ActionParameter>
			<ActionParameter name="payload"></ActionParameter>
			<ActionParameter name="printResult">true</ActionParameter>
			<ActionParameter name="expectedStatusCode">200</ActionParameter>
			<ActionParameter name="expectedMessageCode"></ActionParameter>
		</Action>

        <!-- Failover to standby -->
        <Action name="Failover" type="ShellAction">
            <ActionParameter name="command">python ../scripts/haFunctions.py -a stopPrimary -f stopPrimary.log</ActionParameter>
            <ActionParameter name="print_result">true</ActionParameter>
        </Action>

        <!-- After failover, still see used count 1 -->
        <Action name="UseCountAfterFailover" type="RestAPI">
			<ActionParameter name="server">``A2_HOST``:``A2_PORT``</ActionParameter>
			<ActionParameter name="path">/ima/v1/configuration/TopicPolicy/PendingDeleteMP1</ActionParameter>
			<ActionParameter name="action">GET</ActionParameter>
			<ActionParameter name="payload"></ActionParameter>
			<ActionParameter name="printResult">true</ActionParameter>
			<ActionParameter name="expectedStatusCode">200</ActionParameter>
			<ActionParameter name="expectedMessageCode"></ActionParameter>
		</Action>

        <!-- After failover, sub MP still the correct one -->
        <Action name="ShowSubMPStillCorrect" type="RestAPI">
			<ActionParameter name="server">``A2_HOST``:``A2_PORT``</ActionParameter>
			<ActionParameter name="path">/ima/v1/monitor/Subscription?ClientID=HADynamicJMSClient</ActionParameter>
			<ActionParameter name="action">GET</ActionParameter>
			<ActionParameter name="payload"></ActionParameter>
			<ActionParameter name="printResult">true</ActionParameter>
			<ActionParameter name="expectedStatusCode">200</ActionParameter>
			<ActionParameter name="expectedMessageCode"></ActionParameter>
		</Action>
        <!-- shell action show sub -->

        <!-- Delete subsription -->
        <Action name="DeleteSubscription" type="RestAPI">
			<ActionParameter name="server">``A2_HOST``:``A2_PORT``</ActionParameter>
			<ActionParameter name="path">/ima/v1/service/Subscription/HADynamicJMSClient/DurableHADynamicSubscription</ActionParameter>
			<ActionParameter name="action">DELETE</ActionParameter>
			<ActionParameter name="payload"></ActionParameter>
			<ActionParameter name="printResult">true</ActionParameter>
			<ActionParameter name="expectedStatusCode">200</ActionParameter>
			<ActionParameter name="expectedMessageCode"></ActionParameter>
		</Action>

        <!-- After unsubscribe, MP gone -->
        <Action name="GetUseCountBetweenDeletes" type="RestAPI">
			<ActionParameter name="server">``A2_HOST``:``A2_PORT``</ActionParameter>
			<ActionParameter name="path">/ima/v1/configuration/TopicPolicy/PendingDeleteMP1</ActionParameter>
			<ActionParameter name="action">GET</ActionParameter>
			<ActionParameter name="payload"></ActionParameter>
			<ActionParameter name="printResult">true</ActionParameter>
			<ActionParameter name="expectedStatusCode">200</ActionParameter>
			<ActionParameter name="expectedMessageCode"></ActionParameter>
		</Action>

        <!-- Delete subsription -->
        <Action name="DeleteSubscriptionD" type="RestAPI">
			<ActionParameter name="server">``A2_HOST``:``A2_PORT``</ActionParameter>
			<ActionParameter name="path">/ima/v1/service/Subscription/HADynamicJMSClient/DurableHADynamicSubscriptionD</ActionParameter>
			<ActionParameter name="action">DELETE</ActionParameter>
			<ActionParameter name="payload"></ActionParameter>
			<ActionParameter name="printResult">true</ActionParameter>
			<ActionParameter name="expectedStatusCode">200</ActionParameter>
			<ActionParameter name="expectedMessageCode"></ActionParameter>
		</Action>

        <!-- Delete subsription -->
        <Action name="DeleteSubscriptionE" type="RestAPI">
			<ActionParameter name="server">``A2_HOST``:``A2_PORT``</ActionParameter>
			<ActionParameter name="path">/ima/v1/service/Subscription/HADynamicJMSClient/DurableHADynamicSubscriptionE</ActionParameter>
			<ActionParameter name="action">DELETE</ActionParameter>
			<ActionParameter name="payload"></ActionParameter>
			<ActionParameter name="printResult">true</ActionParameter>
			<ActionParameter name="expectedStatusCode">200</ActionParameter>
			<ActionParameter name="expectedMessageCode"></ActionParameter>
		</Action>

        <!-- After unsubscribe, MP gone -->
        <Action name="GetUseCountAfterDeletes" type="RestAPI">
			<ActionParameter name="server">``A2_HOST``:``A2_PORT``</ActionParameter>
			<ActionParameter name="path">/ima/v1/configuration/TopicPolicy/PendingDeleteMP1</ActionParameter>
			<ActionParameter name="action">GET</ActionParameter>
			<ActionParameter name="payload"></ActionParameter>
			<ActionParameter name="printResult">true</ActionParameter>
			<ActionParameter name="expectedStatusCode">404</ActionParameter>
			<ActionParameter name="expectedMessageCode"></ActionParameter>
		</Action>

		<Action name="RestartStandby" type="ShellAction">
			<ActionParameter name="command">python ../scripts/haFunctions.py -a startStandby -f startStandby.log</ActionParameter>
			<ActionParameter name="print_result">true</ActionParameter>
		</Action>

        <!-- Swap primary -->
        <Action name="SwapPrimary" type="ShellAction">
            <ActionParameter name="command">python ../scripts/haFunctions.py -a swapPrimary -f swapPrimary.log</ActionParameter>
            <ActionParameter name="print_result">true</ActionParameter>
        </Action>

        <Action name="RecreatePolicy" type="RestAPI">
			<ActionParameter name="server">``A1_HOST``:``A1_PORT``</ActionParameter>
			<ActionParameter name="path">/ima/v1/configuration</ActionParameter>
			<ActionParameter name="action">POST</ActionParameter>
			<ActionParameter name="payload">{"TopicPolicy":{"PendingDeleteMP1":{"Topic":"*","ActionList":"Publish,Subscribe","Protocol":"JMS,MQTT"}}}</ActionParameter>
			<ActionParameter name="printResult">true</ActionParameter>
			<ActionParameter name="expectedStatusCode">200</ActionParameter>
			<ActionParameter name="expectedMessageCode"></ActionParameter>
		</Action>

        <!-- Reassign policy to endpoint-->
        <Action name="ReassignPolicy" type="RestAPI">
			<ActionParameter name="server">``A1_HOST``:``A1_PORT``</ActionParameter>
			<ActionParameter name="path">/ima/v1/configuration</ActionParameter>
			<ActionParameter name="action">POST</ActionParameter>
			<ActionParameter name="payload">{"Endpoint":{"PendingDeleteEP1":{"TopicPolicies":"PendingDeleteMP1,PendingDeleteMP2"}}}</ActionParameter>
			<ActionParameter name="printResult">true</ActionParameter>
			<ActionParameter name="expectedStatusCode">200</ActionParameter>
			<ActionParameter name="expectedMessageCode"></ActionParameter>
		</Action>

    </Action>

</ImaJmsTest>
