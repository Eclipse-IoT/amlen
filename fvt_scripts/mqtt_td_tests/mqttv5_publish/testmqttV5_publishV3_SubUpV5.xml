                <ActionParameter name="RETAIN">false</ActionParameter>
            </Action>
	        <Action name="WaitForPendingDeliveryToQueue" type="WaitPendingDelivery" >
                <ActionParameter name="connection_id">CF1</ActionParameter>
            </Action>
        </Action>

		
        <Action name="sync_4" type="SyncComponentAction"> 
            <ActionParameter name="component_name">tx4</ActionParameter>
            <ActionParameter name="component_list">rxV3-4;tx4</ActionParameter>
            <ActionParameter name="timeout">15000</ActionParameter>
        </Action>


        <Action name="SendNewV5Messages" type="CompositeAction" repeat="10" >
            <Action name="SendMessage_V5New" type="SendMessage">
                <ActionParameter name="connection_id">CF1</ActionParameter>
                <ActionParameter name="message_id">txmsg1</ActionParameter>
                <ActionParameter name="topic">subUpV5/01</ActionParameter>
                <ActionParameter name="QoS">1</ActionParameter>
                <ActionParameter name="RETAIN">false</ActionParameter>
            </Action>
	        <Action name="WaitForPendingDelivery_V5New" type="WaitPendingDelivery" >
                <ActionParameter name="connection_id">CF1</ActionParameter>
            </Action>
        </Action>


		
		
        <Action name="CloseConnection_V5" type="CloseConnection">
            <ActionParameter name="connection_id">CF1</ActionParameter>
        </Action>
		
		
        <Action name="re-Connection_V3" type="CreateConnection">
            <ActionParameter name="structure_id">Con1</ActionParameter>
            <ActionParameter name="connection_id">CF1</ActionParameter>
            <include>../common/ConnectionType.xml</include>
            <ApiParameter name="protocol">mqtt</ApiParameter>
            <include>../common/MQTT_server.xml</include>
            <include>../common/MQTT_port.xml</include>
            <ApiParameter name="clientId">publishV3_subUpV5.pub</ApiParameter>
            <ApiParameter name="cleanSession">false</ApiParameter>
        </Action>

        <Action name="CreateMessage_V3New" type="CreateMessage">
            <ActionParameter name="structure_id">txmsg1</ActionParameter>
            <ActionParameter name="connection_id">CF1</ActionParameter>
            <ApiParameter name="msgType">TEXT</ApiParameter>
            <ApiParameter name="payload">MSG :{ clientId:publishV3_subUpV5.pub , topic:subUpV5/01 , QoS:1  Client:v4 AGAIN!}</ApiParameter>
        </Action>
        
        <Action name="SendMessages_V3New" type="CompositeAction" repeat="10" repeat_interval="50">
            <Action name="SendMessage_V3New" type="SendMessage">
                <ActionParameter name="connection_id">CF1</ActionParameter>
                <ActionParameter name="message_id">txmsg1</ActionParameter>
                <ActionParameter name="topic">subUpV5/01</ActionParameter>
                <ActionParameter name="QoS">1</ActionParameter>
                <ActionParameter name="RETAIN">false</ActionParameter>
            </Action>
	        <Action name="WaitForPendingDelivery_V3New" type="WaitPendingDelivery" >
                <ActionParameter name="connection_id">CF1</ActionParameter>
            </Action>
        </Action>

        <Action name="Disconnect_V3" type="CloseConnection">
            <ActionParameter name="connection_id">CF1</ActionParameter>
        </Action>
		
    </Action>
    
    
<!-- ========== receiveV3 ========== --> 

